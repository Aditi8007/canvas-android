<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="itemViewModel"
            type="com.instructure.student.features.settings.calendarsync.CalendarItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/elementaryViewLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeight"
        android:paddingEnd="12dp"
        android:paddingStart="16dp"
        android:onClick="@{() -> itemViewModel.onClick()}"
        android:foreground="?selectableItemBackground">

        <RadioButton
            android:id="@+id/calendarSyncSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginStart="16dp"
            android:clickable="false"
            android:focusable="false"
            android:checked="@{itemViewModel.selected}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/calendarSyncTitle"
            style="@style/TextFont.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:labelFor="@+id/toggle"
            android:textSize="16sp"
            android:text="@{itemViewModel.calendarViewData.displayName}"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/calendarSyncDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/calendarSyncSwitch"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="My Calendar"/>

        <TextView
            android:id="@+id/calendarSyncDescription"
            style="@style/TextFont.Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/defaultTextGray"
            android:textSize="12sp"
            android:text="@{itemViewModel.subtitle}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/calendarSyncSwitch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calendarSyncTitle"
            tools:text="accountName@gmail.com"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>